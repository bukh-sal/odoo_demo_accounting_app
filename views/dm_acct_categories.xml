<odoo>
    <record id="dm_categories_action" model="ir.actions.act_window">
        <field name="name">Categories - DM</field>
        <field name="res_model">dm.accounting.category</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <record id="dm_categories_list" model="ir.ui.view">
        <field name="name">Categories List</field>
        <field name="model">dm.accounting.category</field>
        <field name="arch" type="xml">
            <tree string="Properties">
                <field name="name"/>
            </tree>
        </field>
    </record>
    
    
    <record id="dm_category_form_view" model="ir.ui.view">
        <field name="name">Category Form</field>
        <field name="model">dm.accounting.category</field>
        <field name="arch" type="xml">
            <form string="Properties">
                
                <sheet string="General Information">
                    <group string="General Information">
                        <field name="name"/>
                    </group>
                </sheet>

            </form>
        </field>
    </record>
</odoo>